<Window x:Class="SecondaryWindow.AdvancedDialogWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SecondaryWindow"
             mc:Ignorable="d" 
             d:DesignHeight="155"
             d:DesignWidth="260"
             AllowsTransparency="True"
             WindowStyle="None">
    <Window.Resources>
        <SolidColorBrush x:Key="infoBorderBrush"
                         Color="#42D7F0"/>

        <SolidColorBrush x:Key="warningBorderBrush"
                         Color="#F0AA42"/>

        <SolidColorBrush x:Key="successBorderBrush"
                         Color="#50F042"/>
    </Window.Resources>

    <ItemsControl>
        <ItemsControl.ItemTemplate>
            <DataTemplate DataType=""></DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>

