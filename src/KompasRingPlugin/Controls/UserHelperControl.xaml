<UserControl x:Class="KompasRingPlugin.Controls.UserHelperControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KompasRingPlugin.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="570" d:DesignWidth="323">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <MediaElement Grid.Row="1"
                      x:Name="MediaElement"
                      LoadedBehavior="Play"
                      MediaFailed='MediaElement_OnMediaFailed'/>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock 
                        x:Name="addInfoTextBlock"/>
        </Grid>
    </Grid>
</UserControl>
